extends layout

block content
    .container 
        #login.row.justify-content-center
            .col-12.col-md-10.col-lg-8
                .card.text-center.text-white.bg-light
                    .card-header
                        h2 Acceso
                    .card-body
                        
                        form#login.row.justify-content-center(action="/login", method="post") 
                            .col-3.col-sm-2.col-xl-1
                                input.form-control.form-control-color(type="color" id="color" value="#00EFD1" title="Choose your color")
                            .col-9.col-sm-10.col-sm-9.col-lg-8.col-xl-8
                                input#inputUser.form-control(type="text" name="user" placeholder="Nombre")
                            
                                button#btnLogin.btn.btn-primary(type="submit") login
                        
                   
                        
    script(src='/javascripts/login.js') 
        
         
        